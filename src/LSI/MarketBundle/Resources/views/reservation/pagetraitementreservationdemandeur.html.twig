    {% if listreservation is defined %}
        {% for listreservation in listreservation %}

            {#Traitement du bouton d'annulation d'une réservation par le demandeur#}
            <script>

                $(document).on('click', 'button#annuler', function () {
                    that = $(this);
                    if (confirm('Voulez vous annuler la réservation ?')) {
                        $.ajax({
                            url: "{{ path('ls_imarket_traitement_demandeur_annulerreserv', {'id': listreservation.id}) }}",
                            type: "GET",
                            data: {
                                "btn-annuler": "annuler"
                            },
                            async: true,
                            success: function () {
                                // alert('La réservation a été refusée !');
                                $("#annuler").prop('disabled', true);
                                $("#payer").prop('disabled', true);
                                /* Redirection vers la page de consultation des annonces*/
                                window.location.href = "{{ path('ls_imarket_annonce_reservee') }}";
                            }
                        })
                    }
                })
            </script>
        {% endfor %}
    {% endif %}

    <!-- Traitement de la disponibilité sur le calendrier -->

    </script>
    {% if datedebut is defined %}
        {% if datefin is defined %}
            {% if statut is defined %}

                <script>
                    $('#calendar-holder').fullCalendar({
                        events: [
                            {
                                title: '{{ statut }}',
                                start: '{{ datedebut|date('Y-m-d') }}',
                                end: '{{ datefin|date_modify("+1 day")|date('Y-m-d') }}',
                                color: '{{ colordispo }}'
                            },

                            {% for reserve in listreservation %}
                            {% if reserve.reserveEtat == "V" %}
	                            {


	                                title: 'Réservé',
	                                start: '{{ reserve.debutPrestation|date('Y-m-d') }}',
	                                end: '{{ reserve.finPrestation|date_modify("+1 day")|date('Y-m-d') }}',
	                                color: 'blue',


	                            },

                            {% endif %}
                            {% endfor %}

                        ]

                    });
                </script>

            {% endif %}
        {% endif %}

    {% else %}

        <script>
            $('#calendar-holder').fullCalendar({
                {% for reserve in listreservation %}
                {% if reserve.reserveEtat == "V" %}
                events: [
                    {

                        title: 'Réservé',
                        start: '{{ reserve.debutPrestation|date('Y-m-d') }}',
                        end: '{{ reserve.finPrestation|date_modify("+1 day")|date('Y-m-d') }}',
                        color: 'blue',

                    },

                ]
                {% endif %}
